{
    "compilerOptions": {
      "strict": false,               // Turn off strict mode
      "noEmitOnError": false,        // Allow emitting code even when there are errors
      "skipLibCheck": true,          // Skip type checking for third-party libraries
      "esModuleInterop": true,       // Enables ES module compatibility
      "allowJs": true,               // Allow JavaScript files to be imported
      "moduleResolution": "node",    // Use Node-style module resolution
      "noEmit": false                // Allow emitting files
    }
  }
  